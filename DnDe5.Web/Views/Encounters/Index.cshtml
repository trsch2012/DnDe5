@model IEnumerable<DnDe5.Web.Models.Encounters.EncounterModel>

@{
    ViewBag.Title = "View";
}

<h2>View</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.EncounterName)
        </th>
        <th></th>
    </tr>
    @if (Model == null)
    {
        <tr><td colspan="2">No Results</td></tr>
    }
    else
    {
        foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.EncounterName)
                </td>
                <td>
                    @Html.ActionLink("Edit", "EncounterEdit", new { id=item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id=item.Id })
                </td>
            </tr>
        }
    }
</table>
